# EditorConfig - Configuration pour tous les éditeurs
# https://editorconfig.org

root = true

# Configuration par défaut pour tous les fichiers
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Fichiers Python
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Fichiers YAML
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Fichiers JSON
[*.json]
indent_style = space
indent_size = 2

# Fichiers Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Fichiers de configuration
[{Makefile,*.mk}]
indent_style = tab

# Fichiers JavaScript/TypeScript (pour Slidev)
[*.{js,ts,jsx,tsx,vue}]
indent_style = space
indent_size = 2

# Fichiers CSS
[*.{css,scss,less}]
indent_style = space
indent_size = 2
